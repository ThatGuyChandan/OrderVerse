// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  MANAGER
  MEMBER
}

enum Country {
  INDIA
  AMERICA
}

enum OrderStatus {
  CREATED
  PAID
  CANCELLED
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  role    Role
  country Country

  orders         Order[]
  paymentMethods PaymentMethod[]
}

model Restaurant {
  id      Int      @id @default(autoincrement())
  name    String
  country Country

  menuItems MenuItem[]
}

model MenuItem {
  id           Int    @id @default(autoincrement())
  restaurantId Int
  price        Float

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  orderItems OrderItem[]
}

model Order {
  id      Int         @id @default(autoincrement())
  userId  Int
  country Country
  status  OrderStatus

  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]
}

model OrderItem {
  id         Int @id @default(autoincrement())
  orderId    Int
  menuItemId Int
  quantity   Int

  order    Order    @relation(fields: [orderId], references: [id])
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])
}

model PaymentMethod {
  id     Int    @id @default(autoincrement())
  userId Int
  type   String

  user User @relation(fields: [userId], references: [id])
}
